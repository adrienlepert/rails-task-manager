<h1>Task#index</h1>
<p>Find me in app/views/task/index.html.erb</p>


<!-- app/views/restaurants/index.html.erb -->
<% @tasks.each do |task| %>

  <div class="card" >

  <h2> Title: <%= task.title %></h2>
  <p> description: <%= task.description %></p>
  <p> priority: <%= task.priority %></p>
  <p> responsibility: <%= task.responsibility %></p>

  <%= link_to "edit", edit_task_path(task) %>
  <%= link_to "view task", task_path(task) %>
  <%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you really sure?" } %>

  </div>

<% end %>


